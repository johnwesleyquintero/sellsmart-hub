{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/app/components/*": ["app/components/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/components/blog/*": ["components/blog/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    "dist/scripts/playground-1.mongodb.js",
    "dist/scripts/playground-2.mongodb.js",
    "dist/scripts/portfolio-playground.mongodb.js"
  ],
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "exclude": ["node_modules", ".next"]
}
