{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/app/components/*": ["./app/components/*"],
      "@/hooks/*": ["./app/hooks/*"]
    }
  }, // Comma needed as 'types' follows
  "types": ["jest", "@testing-library/jest-dom", "node"],
  "include": [
    "src/types/**/*", // This handles types inside src/types
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/__tests__/setup.ts",
    "src/**/*", // This also covers src/types, but the specific entry is clearer
    "src/__tests__/**/*"
  ],

  "typeRoots": ["./src/types", "./node_modules/@types"], // Comma needed as 'exclude' follows
  // Added comma on the line above
  "exclude": [
    ".next",
    ".wescore",
    "jest.config.ts",
    "__mocks__/svg.js",
    "coverage/lcov-report/*",
    "dist/lib/models.js",
    "dist/lib/mongodb.js",
    "dist/scripts/*",
    "jest.setup.ts",
    "next.config.js",
    "tailwind.config.js",
    "eslint.config.mjs"
  ]
}
