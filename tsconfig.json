{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Removed the extra '],' from the original line 23
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/app/components/*": ["./app/components/*"],
      "@/hooks/*": ["./app/hooks/*"] // Ensure this line exists
    }
    // Note: The 'paths' object is the last item within 'compilerOptions', so it does NOT need a trailing comma after its closing brace '}'.
  }, // This closing brace '}' ends the 'compilerOptions' object. It needs a comma because 'types' follows it.
  "types": ["jest", "@testing-library/jest-dom", "node"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/__tests__/setup.ts",
    "src/**/*",
    "types/**/*.d.ts"
  ],
  "typeRoots": ["./src/types", "./node_modules/@types"], // Added comma here because 'exclude' follows.
  "exclude": [".next", "jest.config.js"]
  // Note: 'exclude' is the last item in the main object, so it does NOT need a trailing comma.
}
