# Vercel Production Environment Variables
NEXT_PUBLIC_VERCEL_ENV=production
NEXT_PUBLIC_GA_ID=your_ga_id

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'
STRICT_TRANSPORT_SECURITY=max-age=63072000

# Build Optimizations
NEXT_PUBLIC_IMAGE_DEBUG=false
WEBPACK_BUNDLE_ANALYZER=false
DATABASE_SSL_ENABLED=false

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@portfolio.com

# CDN and Media
CDN_URL=https://cdn.portfolio.com
MEDIA_STORAGE_PATH=./public/uploads
MAX_UPLOAD_SIZE=5242880

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900
API_TIMEOUT=30000

# Search Service
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_NAME=portfolio
SEARCH_API_KEY=your_search_api_key

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_API_LOGGING=false

# Performance & Development
ANALYZE_npmDLE=false
ENABLE_SOURCE_MAPS=true
DEBUG_ENABLED=false

# Testing
CYPRESS_BASE_URL=http://localhost:3000
JEST_WATCH=false

# Documentation
TYPEDOC_OUT_DIR=docs
API_DOCS_DIR=api-docs

# Caching
REDIS_CACHE_ENABLED=false
STATIC_CACHE_DURATION=3600

# Monitoring
SENTRY_ENABLED=false
PERFORMANCE_MONITORING=false
ERROR_REPORTING_LEVEL=debug