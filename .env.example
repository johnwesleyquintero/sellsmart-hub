# Remove sensitive tokens from source control and use environment-specific values
LHCI_GITHUB_APP_TOKEN=
MY_GITHUB_ACCESS_TOKEN=

# Base Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# GitHub Access (for fetching project data)
GITHUB_ACCESS_TOKEN=your_github_token

# AWS Integration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=portfolio-assets

# Database
DATABASE_URL=postgresql://localhost:5432/portfolio
DATABASE_POOL_SIZE=20
DATABASE_SSL_ENABLED=false

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@portfolio.com

# CDN and Media
CDN_URL=https://cdn.portfolio.com
MEDIA_STORAGE_PATH=./public/uploads
MAX_UPLOAD_SIZE=5242880

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900
API_TIMEOUT=30000

# Search Service
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_NAME=portfolio
SEARCH_API_KEY=your_search_api_key

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_API_LOGGING=false

# Performance & Development
ANALYZE_npmDLE=false
ENABLE_SOURCE_MAPS=true
DEBUG_ENABLED=false

# Testing
CYPRESS_BASE_URL=http://localhost:3000
JEST_WATCH=false

# Documentation
TYPEDOC_OUT_DIR=docs
API_DOCS_DIR=api-docs

# Caching
REDIS_CACHE_ENABLED=false
STATIC_CACHE_DURATION=3600

# Monitoring
SENTRY_ENABLED=false
PERFORMANCE_MONITORING=false
ERROR_REPORTING_LEVEL=debug